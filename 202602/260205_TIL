      int[] parent;
    
      void init(int n) {
          parent = new int[n+1];
    
          for(int i=1; i<n; i++){
              parent[i] = i;
          }  
      }

  2. find(ëŒ€í‘œ ë…¸ë“œ ì°¾ê¸°)
      int find(int x) {
          if(parent[x] == x) return x;
          return parent[x] = find(parent[x]); // ê²½ë¡œ ì••ì¶•
      }

  3. union (ë‘ ì§‘í•© í•©ì¹˜ê¸°)
  - ê°ê° ëŒ€í‘œ ë…¸ë“œ ì°¾ê³ , ëŒ€í‘œë¼ë¦¬ ì—°ê²°
    void union(int a, int b) {
        int rootA = find(a);
        int rootB = find(b);

        if(rootA != rootB) {
            parent[rootB] = rootA;
        }
    }
